' Component diagram styling (if used)
skinparam component {
    BackgroundColor #FFFFFF
    BorderColor #0D6EFD
    FontColor #212529
    FontSize 13
    FontStyle bold
}

skinparam interface {
    BackgroundColor #E7F1FF
    BorderColor #0A58CA
    FontColor #0A58CA
    FontSize 12
}

skinparam package {
    BackgroundColor #F8F9FA
    BorderColor #6C757D
    FontColor #495057
    FontSize 12
    FontStyle bold
}

' State diagram styling (if used)
skinparam state {
    BackgroundColor #F8F9FA
    BorderColor #0D6EFD
    FontColor #212529
    FontSize 13
    FontStyle bold
    RoundCorner 8
}

' General styling
skinparam shadowing false
skinparam roundcorner 8
skinparam linetype ortho

